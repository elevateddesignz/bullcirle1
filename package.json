{
  "name": "bullcircle-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/web",
    "apps/api"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace apps/web",
    "build:web": "npm run build --workspace apps/web",
    "lint:web": "npm run lint --workspace apps/web",
    "preview:web": "npm run preview --workspace apps/web",
    "dev:api": "npm run dev --workspace apps/api",
    "build:api": "npm run build --workspace apps/api || exit 0",
    "start:api": "npm run start --workspace apps/api",
    "lint:provider": "./scripts/check-provider-split.sh",
    "precommit": "npm run lint:provider"
  }
}
