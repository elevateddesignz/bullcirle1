{
  "name": "bullcircle-api",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "description": "BullCircle backend API (Express + TypeScript)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node index.js",
    "build": "tsup src/server.ts --format esm --dts --sourcemap --clean",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "start:legacy": "node index.js",
    "start:new": "node --enable-source-maps dist/server.js",
    "prisma:seed": "prisma db seed"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.632.0",
    "@prisma/client": "^5.20.0",
    "@supabase/supabase-js": "^2.45.0",
    "axios": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pino": "^9.3.0",
    "pino-http": "^8.6.0",
    "zod": "^3.23.8",
    "python-shell": "^5.0.0",
    "openai": "^4.95.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.8.4",
    "@types/node-fetch": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^8.12.0",
    "@typescript-eslint/parser": "^8.12.0",
    "eslint": "^9.12.0",
    "prisma": "^5.20.0",
    "tsup": "^8.1.0",
    "tsx": "^4.16.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4",
    "ts-node": "^10.9.2"
  }
}
